# VIRE Portal Configuration (local dev)
# Priority: defaults < this file < environment variables (VIRE_*) < CLI flags
#
# Copy to vire-portal.toml and edit:
#   cp config/vire-portal.toml.example config/vire-portal.toml

environment = "dev"

[server]
port = 4241
host = "localhost"

[api]
url = "http://localhost:4242"

[user]
# portfolios = ["SMSF", "Personal"]
# display_currency = "AUD"

[import]
users = true
users_file = "data/users.json"

[storage.badger]
path = "./data/vire"

[logging]
level = "info"    # debug, info, warn, error
format = "text"   # text, json
