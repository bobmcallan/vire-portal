# VIRE MCP Configuration
# Priority: defaults < this file < environment variables (VIRE_*)
#
# Copy to vire-mcp.toml and edit:
#   cp config/vire-mcp.toml.example config/vire-mcp.toml
#
# vire-mcp is a stdio-to-HTTP bridge — it connects to vire-portal's
# Streamable HTTP MCP endpoint. All tool logic lives in vire-portal.
# User identity comes from OAuth, not config.
# Stdout is reserved for MCP protocol; console logging goes to stderr.

[portal]
# URL of the vire-portal instance to connect to.
# Override with VIRE_PORTAL_URL environment variable.
url = "http://localhost:4241"

[logging]
level = "info"              # debug, info, warn, error
# format = "text"           # text, json
outputs = ["console"]       # console (stderr), file — console-only default for Docker
# file_path = "logs/vire-mcp.log"
# max_size_mb = 10
# max_backups = 3
